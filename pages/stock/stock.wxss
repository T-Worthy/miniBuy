page{
  height: 100%;
  width: 100%
}

.nav{
   height: 100%;
  width: 100%;
  display: flex
}
.nav-left{
   display: inline-block;
   /*问题*/
  width: 22%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
}
.nav-left .nav-left-items{
  /*每个高30px*/
  height: 30px;
  line-height: 30px;
  padding: 6px 0;
  border-bottom: 1rpx solid #dedede;
  font-size: 30rpx; 
   overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis
}
/*左侧栏list的item被选中时*/
.nav-left .nav-left-items.active{
  background-color: white;
  color: gray/*#d8d8d8*/

}
.nav-right{
  width: 78%;
  height: 100%;
   background: #f5f5f5;
}
.nav-right-items{
  float: left;
  width:50%;
   height: 370rpx; 
}
.item-image{
  text-align: center;
  padding-top: 5rpx
}
image{
  width: 200rpx;
  height: 190rpx;
}
.item-name{
  width: 100%;
  height: 55rpx;
  font-size: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-left: 5rpx;
}
.end-stock{
  color: red;
  font-size: 29rpx;
  height: 50rpx;
}
.end-number{
  
  color: gray;
  font-size: 25rpx;
  width: 150rpx;
   padding-left: 130rpx;
   padding-top: 10rpx;
   height: 40rpx; 
}
.item-border{
  width: 95%;
  height: 95%;
  border: 1rpx solid f5f5f5;
  border-radius: 10rpx;
  background-color: white
}